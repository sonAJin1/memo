<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/tv_camera"
            style="@style/PhotoTypeItem"
            android:layout_marginTop="8dp"
            android:drawableStart="@drawable/ic_camera_alt_black_24dp"
            android:drawableLeft="@drawable/ic_camera_alt_black_24dp"
            android:text="@string/photo_type_camera"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_gallery"
            style="@style/PhotoTypeItem"
            android:drawableStart="@drawable/ic_photo_library_black_24dp"
            android:drawableLeft="@drawable/ic_photo_library_black_24dp"
            android:text="@string/photo_type_gallery"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_camera" />

        <TextView
            android:id="@+id/tv_url"
            style="@style/PhotoTypeItem"
            android:drawableStart="@drawable/ic_insert_link_black_24dp"
            android:drawableLeft="@drawable/ic_insert_link_black_24dp"
            android:text="@string/photo_type_url"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_gallery" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>