<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="memo"
            type="com.line.saj.components.model.Memo" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/x24dp"
        android:paddingRight="@dimen/x24dp"
        android:paddingTop="@dimen/x6dp"
        android:paddingBottom="@dimen/x6dp">

        <ImageView
            android:id="@+id/iv_thumb"
            android:layout_width="@dimen/x50dp"
            android:layout_height="@dimen/x50dp"
            bind_image="@{memo.image}"
            tools:background="@color/colorPrimaryDark"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_thumb"
            android:layout_marginLeft="@dimen/x5dp"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{memo.title}"
                tools:text="메모 테스트"/>

            <TextView
                android:id="@+id/tv_contents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{memo.contents}"
                tools:text="메모 테스트"/>
        </LinearLayout>



    </RelativeLayout>
</layout>