<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="photo"
            type="String" />
    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_thumbnail"
            android:layout_width="@dimen/x56dp"
            android:layout_height="@dimen/x56dp"
            android:layout_marginTop="@dimen/x7dp"
            android:layout_marginRight="@dimen/x5dp"
            bind_image="@{photo}"
            />


        <ImageView
            android:id="@+id/iv_photo_delete"
            android:layout_width="@dimen/x15dp"
            android:layout_height="@dimen/x15dp"
            android:layout_alignEnd="@+id/iv_thumbnail"
            android:layout_marginRight="-5dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/ic_photo_delete"

            />

    </RelativeLayout>
</layout>